@model ProductVM

<div class="row">
    <div class="col-md-4 offset-4 mt-3">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Product.Id" class="form-control">Id</label>
                <input asp-for="Product.Id" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.ProductName" class="form-control">Ad</label>
                <input asp-for="Product.ProductName" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Stock" class="form-control">Stok</label>
                <input asp-for="Product.Stock" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="form-control">Fiyat</label>
                <input asp-for="Product.Price" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId" class="form-control">Kategori</label>
                <select asp-for="Product.CategoryId" class="form-control">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-danger">Ekle</button>
            </div>
        </form>
    </div>
</div>
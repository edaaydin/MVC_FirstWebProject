@model Personel

<div class="row justify-content-center align-items-center">
    <div class="col-md-8">
        <div class="card bg-dark text-white m-5">
            <div class="card-body text-center">
                <p>Personel Bilgileri</p>
                <form asp-action="Personelolustur" method="post">
                    <div class="form-grup mb-3">
                        <input type="text" class="form-control" asp-for="Id" />
                        <label asp-for="Id" class="form-label">Id :</label>
                    </div>

                    <div class="form-grup mb-3">
                        <input type="text" class="form-control" asp-for="Ad" />
                        <label asp-for="Ad" class="form-label">Ad :</label>
                    </div>

                    <div class="form-grup mb-3">
                        <input type="text" class="form-control" asp-for="Soyad" />
                        <label asp-for="Soyad" class="form-label">Soyad :</label>
                    </div>

                    <div class="form-grup mb-3">
                        <input type="text" class="form-control" asp-for="Maas" />
                        <label asp-for="Maas" class="form-label">Maas :</label>
                    </div>

                    <div class="form-group mb-3">
                        <button class="btn btn-success" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


